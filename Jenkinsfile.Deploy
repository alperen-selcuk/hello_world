pipeline {
    environment {
        APP = "hello-world"
        HELM_REPO = ""
    }
    agent { 
        kubernetes {
            yaml '''
            apiVersion: v1
            kind: Pod
            spec:
               containers:
               - name : docker
                 image : docker:latest
                 command:
                 - cat
                 tty : true
                 volumeMounts: 
                 - mountPath: /var/run/docker.sock
                   name: docker-sock
               - name: helm
                 image: dtzar/helm-kubectl
                 command: 
                 - cat
                 tty: true
               - name: google
                 image: hasanalperen/gcph:12.21
                 command:
                 - cat
                 tty: true
               volumes: 
                 - name : docker-sock
                   hostPath: 
                      path: /var/run/docker.sock
             '''
        }
    }
  stages {
    stage ("get number") {
      steps {
        script {
         def buildNumber = Jenkins.instance.getItem('Build').lastSuccessfulBuild.number
         echo "${buildNumber}"
         }
      }
    }
    stage('Helm Create') {
        steps {
            container('helm') {
                sh '''#!/bin/bash
                   wget -c https://github.com/alperen-selcuk/hello-world/raw/master/hello-world.tgz ##this is shared chart you can create your own charts file
                   tar -xvzf web-1.tgz
                   rm -f web-1.tgz
                   helm package ${APP} --version=${buildNumber}
                   #curl -L --data-binary @${APP}-${buildNumber}.tgz ${HELM_REPO}/api/charts
                   '''
                } 
            }
        }
  }
}
